@model IEnumerable<Staff>

<table>
    <tr>
        <th>Index</th>
        <th>Name</th>
        <th>Email</th>
        <th>Location</th>
        <th>Education</th>
        <th>Duty Station</th>
        <th>Actions</th>
    </tr>

@foreach(var item in Model)
{
    <tr>
        <td>@item.IndexNumber</td>
        <td>@item.FullNames</td>
        <td>@item.Email</td>
        <td>@item.CurrentLocation</td>
        <td>@item.EducationLevelId</td>
        <td>@item.DutyStationId</td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </td>
    </tr>
}
</table>

<a asp-action="Create">Add New Staff</a>
